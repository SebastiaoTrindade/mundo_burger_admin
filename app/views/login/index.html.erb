<div class="container">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-auto">
        <form method="post" action="/login/logar" class="col-md-6 ">    
          <h1 class="h3 mb-3 fw-normal">Login da área administrativa</h1>
          <hr>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="Email">      
          </div>
          
          <div class="form-group">
            <label for="senha">Senha</label>
            <input type="password" name="senha" class="form-control" id="senha" placeholder="Senha">      
          </div>
          <div class="checkbox mb-3">
            <label>
              <input type="checkbox" value="1" name="lembrar"> Lembrar senha
            </label>
          </div>
          
          <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
          <br><br>
          <p class="mt-5 mb-3 text-muted">© Do zero ao meio de pagamento – 2024</p>
        </form>
    </div>
    
</div>
</div>
  